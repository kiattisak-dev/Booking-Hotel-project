{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",


    "types": ["node"],
    "lib": ["ES2020"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src"]
}
